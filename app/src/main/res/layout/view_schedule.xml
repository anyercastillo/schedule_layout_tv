<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScheduleView">

    <com.paramount.ui.ChannelListView
        android:id="@+id/channels"
        android:layout_width="@dimen/channel_item_width"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/schedule_selected_box"
        app:layout_constraintTop_toTopOf="@+id/schedule_selected_box" />

    <com.paramount.ui.ListingListView
        android:id="@+id/listings"
        android:layout_width="0dp"
        android:layout_height="@dimen/listing_item_height"
        app:layout_constraintBottom_toBottomOf="@+id/schedule_selected_box"
        app:layout_constraintStart_toStartOf="@+id/schedule_selected_box"
        app:layout_constraintTop_toTopOf="@+id/schedule_selected_box" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schedule_selected_box"
        android:layout_width="@dimen/schedule_selected_item_width"
        android:layout_height="@dimen/schedule_selected_item_height"
        android:layout_marginStart="@dimen/listing_item_width"
        android:layout_marginTop="@dimen/channel_item_height"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/schedule_selected_box_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Channel Selected" />

        <TextView
            android:id="@+id/schedule_selected_box_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#ffffff"
            app:layout_constraintStart_toStartOf="@+id/schedule_selected_box_channel"
            app:layout_constraintTop_toBottomOf="@+id/schedule_selected_box_channel"
            tools:text="Listing Text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>